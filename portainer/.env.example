# =================================================================
# HOSPITAL SCRAPER - PORTAINER ENVIRONMENT CONFIGURATION
# =================================================================
# Copy this file to .env and configure with your actual values

# =================================================================
# ELASTICSEARCH CLOUD CONFIGURATION (REQUIRED)
# =================================================================
ELASTICSEARCH_CLOUD_URL=https://your-deployment.es.region.gcp.cloud.es.io:9200
ELASTICSEARCH_API_KEY=your_elasticsearch_api_key_here
ELASTICSEARCH_APM_URL=https://your-deployment.apm.region.gcp.cloud.es.io:443
ELASTICSEARCH_INDEX=hospital-metrics

# =================================================================
# PORT CONFIGURATION (Optional)
# =================================================================
# Scraper application port (external:internal)
APP_PORT=3000

# Backend API port (for UI)
API_PORT=4000

# OTEL Collector ports
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
METRICS_PORT=8889

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
LOG_LEVEL=info
SCRAPING_INTERVAL=30
SCRAPING_TIMEZONE=Europe/Berlin

# =================================================================
# DUAL URL CONFIGURATION (Optional - defaults provided)
# =================================================================
# Adult emergency room URL
ADULT_TARGET_URL=https://www.vivantes.de/klinikum-im-friedrichshain/rettungsstelle

# Children emergency room URL
CHILDREN_TARGET_URL=https://www.vivantes.de/klinikum-im-friedrichshain/kinder-jugendmedizin/kinderrettungsstelle

# =================================================================
# OBSERVABILITY CONFIGURATION
# =================================================================
OTEL_SERVICE_NAME=hospital-scraper
OTEL_SERVICE_VERSION=1.0.0
OBSERVABILITY_PROVIDERS=elastic

# Advanced settings
OTEL_TRACE_SAMPLING=1.0
OTEL_METRIC_INTERVAL=30000

# =================================================================
# PROXY CONFIGURATION (Optional)
# =================================================================
# Uncomment if using proxy
#PROXY_SERVER=http://proxy.example.com:8080
#PROXY_USERNAME=your_proxy_username
#PROXY_PASSWORD=your_proxy_password

# =================================================================
# BACKEND API CONFIGURATION
# =================================================================
# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=20
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Security Configuration
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
API_TIMEOUT_MS=30000
MAX_REQUEST_SIZE=1mb

# =================================================================
# FRONTEND CONFIGURATION (Development)
# =================================================================
VITE_API_URL=http://localhost:4000/api
VITE_APP_TITLE=Hospital Wait Times
VITE_REFRESH_INTERVAL=30000
VITE_BACKEND_HEALTH_URL=http://localhost:4000/health